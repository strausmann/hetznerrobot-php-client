{
	"name": "ispserverfarm/hetznerrobot-php-client",
	"description": "A PHP Client for the Hetzner Robot from Hetzner Online GmbH",
	"type": "library",
	"keywords": [
		"hetzner",
		"robot",
		"composer",
		"api"
	],
	"require": {
		"ext-curl": "*",
		"php":      "^5.6 || ^7.0"
	},
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "filp/whoops": "^2.3",
        "vlucas/phpdotenv": "^3.3",
        "php-http/mock-client": "^1.0",
        "friendsofphp/php-cs-fixer": "^2.10",
        "squizlabs/php_codesniffer": "~2.1",
        "theseer/phpdox": "^0.12.0",
        "wapmorgan/php-code-fixer": "^2.0"
    },
	"autoload": {
		"psr-4": {
			"ISPServerfarm\\APIClients\\HetznerRobot\\": "src"
		}
	},
